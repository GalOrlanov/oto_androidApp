<android.support.v7.widget.CardView android:layout_height="200dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white">


<RelativeLayout android:layout_height="200dp"
    android:layout_width="match_parent"
    android:scaleType="centerCrop">


    <TextView
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/driver_image"
        android:text="Driver Name"
        android:textSize="25dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/driver_name"
        android:text="From:"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/driver_image"
        android:id="@+id/from"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/driver_name"
        android:text="From where"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/from"
        android:id="@+id/from_id"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="113dp"
        android:text="To Where"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/from"
        android:id="@+id/to_id"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/from"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/driver_image"
        android:text="To:"
        android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When:"
        android:id="@+id/time"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/driver_image"
        android:layout_below="@id/to"
        android:textSize="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:id="@+id/time_id"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/time"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/to"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@id/time_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:backgroundTint="#80FF9800"
        android:text="Request"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/driver_image"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_person"

        />



</RelativeLayout>
</android.support.v7.widget.CardView>